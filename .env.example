# AI API Keys
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# Tripletex API
TRIPLETEX_EMPLOYEE_TOKEN=your_employee_token
TRIPLETEX_CONSUMER_TOKEN=your_consumer_token

# Database Configuration
CHROMA_DB_PATH=./chroma_db
PERSISTENT_STORAGE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=ai_system.log

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=50
MAX_REQUESTS_PER_HOUR=1000

# Caching
CACHE_TTL_SECONDS=1800
CACHE_MAX_SIZE=1000

# Security
MAX_INPUT_LENGTH=5000
ENABLE_PROMPT_INJECTION_CHECK=true

# Model Selection
DEFAULT_MODEL=claude-sonnet-4-20250514
FAST_MODEL=claude-haiku-3-5-20250514
ADVANCED_MODEL=claude-opus-4-20250514

# Testing
MOCK_API_CALLS=false
TEST_DATA_PATH=./tests/data
